<p id="notice"><%= notice %></p>

<%= link_to '<< All Categories', user_categories_path %>

<p>
  <%= @category.name %>
</p>


<%= link_to 'Edit', edit_user_category_path(@category) %> | <%= link_to 'Destroy', [@category.user, @category], method: :delete, data: { confirm: 'Are you sure?' } %>

<%= link_to 'New Item', new_user_item_path(@category.user, category_id: @category.id) %>

<table>
<%= render (@category.items.sort! { |a,b| a.name.downcase <=> b.name.downcase }) %>
</table>