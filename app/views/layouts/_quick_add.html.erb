<%= form_tag user_quick_entries_url(@user), id: 'quick_entry' %>
    <%= text_field_tag 'item_name', nil, class: 'item_name' %>
    <%= number_field_tag 'quantity', '1', class: 'quantity' %>
    <%= datetime_local_field_tag 'datetime', Time.now.strftime('%Y-%m-%dT%R'), class: 'datetime', step: 'minutes' %>
    <%= hidden_field_tag 'class', 'quick_entry' %>
    <%= submit_tag("Add") %>
</form>
