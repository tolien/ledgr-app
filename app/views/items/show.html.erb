<p id="notice"><%= notice %></p>

<%= link_to 'All Items', user_items_path %>

<h1>
  <%= @item.name %>
</h1>

<p><b>Total:</b>
  <%= @item.total %>
</p>

<% if !@item.categories.empty? %>

<ul>
  <% @item.categories.each do |category| %>
    <li><%= link_to category.name, user_category_path(@user, category) %></li>
  <% end %>
</ul>

<% end %>

<% if current_user and current_user.id == @item.user.id %>
<%= link_to 'Edit', edit_user_item_path(@item.user, @item) %> |
<%= link_to 'Delete', user_item_path(@item.user, @item), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<% if !@item.entries.empty? %>

<table class="table table-striped">
    <%= render @item_entries %>
</table>

<%= will_paginate @item_entries %>

<% end %>
