<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= link_to 'Show', user_item_path(item.user, item) %></td>
    <td><%= link_to 'Edit', edit_user_item_path(item.user, item) %></td>
    <td><%= link_to 'Delete', user_item_path(item.user, item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

